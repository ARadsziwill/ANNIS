<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
          http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
">

  <bean id="defaultQueryExecutor" class="annis.executors.DefaultQueryExecutor">
    <property name="sqlGenerator" ref="findSqlGenerator"/>
    <property name="matchedNodesViewName" value="${annis.matched-nodes-view}" />
  </bean>

  <bean id="spanExecutor" class="annis.executors.SpanExecutor" >
    <property name="matchedNodesViewName" value="${annis.matched-nodes-view}" />
    <property name="filteredNodeViewName" value="${annis.filtered-node-view}" />
  </bean>

  <bean id="tokExecutor" class="annis.executors.TokExecutor" >
    <property name="matchedNodesViewName" value="${annis.matched-nodes-view}" />
    <property name="filteredNodeViewName" value="${annis.filtered-node-view}" />
  </bean>

  <util:list id="executorList">
    <!--
    <ref bean="spanExecutor" />
    <ref bean="tokExecutor"/>
    -->
    <ref bean="defaultQueryExecutor"/>
  </util:list>

</beans>
