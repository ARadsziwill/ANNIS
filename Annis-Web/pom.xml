    <dependency>
      <groupId>de.hu_berlin.german.korpling.annis</groupId>
      <artifactId>AnnisService</artifactId>
      <version>2.1-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>de.hu_berlin.german.korpling.annis</groupId>
      <artifactId>AnnisServiceObjects</artifactId>
      <version>2.1-SNAPSHOT</version>
      <scope>compile</scope>
