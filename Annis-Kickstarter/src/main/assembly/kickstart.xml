
<assembly>
  <id>distribution</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/resources/</directory>
      <includes>
        <include>splashscreen.gif</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>    
     <!-- overwrite the database.properties -->
    <fileSet>
      <directory>src/main/resources/</directory>
      <includes>
        <include>database.properties</include>
        <include>override-web.xml</include>
      </includes>
      <outputDirectory>/conf/</outputDirectory>
    </fileSet>
    <!-- start scripts -->
    <fileSet>
      <directory>src/main/startscripts/</directory>
      <outputDirectory>/</outputDirectory>
      <fileMode>0774</fileMode>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <!-- our dependcies -->
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <fileMode>0644</fileMode>
      <unpack>false</unpack>
    </dependencySet>
    <!-- service -->
    <dependencySet>
      <includes>
        <include>annis-service*:zip</include> 
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>conf/database.properties</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
    <!-- webapp -->
    <dependencySet>
      <includes>
        <include>annis-web*:war</include> 
      </includes>
      <outputDirectory>webapp/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>
