
<assembly>
  <id>distribution</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <!-- we need all the config files of the service -->
    <fileSet>
      <directory>../Annis-Service/src/main/dist/</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <!-- copy (hopefully compiled, TODO) web application -->
    <fileSet>
      <directory>../Annis-web/target/Annis-web/</directory>
      <outputDirectory>/webapp/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
