
<assembly>
  <id>distribution</id>
  <formats>
    <format>dir</format>
<!--    <format>zip</format> -->
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/resources/</directory>
      <includes>
        <include>splashscreen.gif</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>    
     <!-- overwrite the database.properties -->
    <fileSet>
      <directory>src/main/resources/</directory>
      <includes>
        <include>database.properties</include>
        <include>override-web.xml</include>
      </includes>
      <outputDirectory>/conf/</outputDirectory>
    </fileSet>
    <!-- start scripts -->
    <fileSet>
      <directory>src/main/startscripts/</directory>
      <outputDirectory></outputDirectory>
      <fileMode>0774</fileMode>
    </fileSet>
    <!-- we need all the config files of the service -->
    <fileSet>
      <directory>../Annis-Service/annis-service-impl/src/main/distribution/</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>conf/database.properties</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../Annis-Service/annis-service-impl/src/main/sql/</directory>
      <outputDirectory>scripts/</outputDirectory>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <!-- our dependcies -->
    <dependencySet>
      <includes>
        <include>*:jar</include>
      </includes>
      <outputDirectory>lib/</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
    <!-- service -->
    <dependencySet>
      <includes>
        <include>annis-service*:war</include> 
      </includes>
      <outputDirectory>webapp/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
    <!-- webapp -->
    <dependencySet>
      <includes>
        <include>annis-web*:war</include> 
      </includes>
      <outputDirectory>webapp/</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>
