
<assembly>
  <id>distribution</id>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/resources/</directory>
      <includes>
        <include>splashscreen.gif</include>
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <!-- we need all the config files of the service -->
    <fileSet>
      <directory>../Annis-Service/src/main/dist/</directory>
      <excludes>
        <exclude>conf/database.properties</exclude>
      </excludes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
     <!-- overwrite the database.properties -->
    <fileSet>
      <directory>src/main/resources/</directory>
      <includes>
        <include>database.properties</include>
      </includes>
      <outputDirectory>/conf/</outputDirectory>
    </fileSet>
    <!-- start scripts -->
    <fileSet>
      <directory>src/main/startscripts/</directory>
      <outputDirectory></outputDirectory>
      <fileMode>0774</fileMode>
    </fileSet>
    <!-- copy (hopefully compiled, TODO) web application -->
    <fileSet>
      <directory>../Annis-Web/target/Annis-web/</directory>
      <outputDirectory>/webapp/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib/</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>
</assembly>
